{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessSwitchCase": "error",
        "noStaticOnlyClass": "error"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnnecessaryContinue": "error",
        "noUnusedImports": "error"
      },
      "style": {
        "noNonNullAssertion": "error",
        "useShorthandArrayType": "error",
        "useTemplate": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noRedundantUseStrict": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  }
}
